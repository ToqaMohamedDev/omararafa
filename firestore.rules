rules_version = '2';

service cloud.firestore {

  match /databases/{database}/documents {

    // ---------------------------------------------------------
    // دوال مساعدة (Helper Functions)
    // ---------------------------------------------------------

    // دالة للتحقق من اشتراك المستخدم
    function hasValidSubscription() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/subscriptions/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/subscriptions/$(request.auth.uid)).data.endsAt > request.time;
    }

    // دالة للتحقق من أن المستخدم أدمن
    // تفترض هذه الدالة وجود كولكشن باسم 'roles'
    // إذا وُجد document في roles/{userId}، فهو admin
    function isAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/roles/$(request.auth.uid));
    }

    // ---------------------------------------------------------
    // القواعد (Rules)
    // ---------------------------------------------------------

    // قواعد كولكشن الأدوار (لحماية بيانات الأدمن نفسه)
    match /roles/{userId} {
      // السماح للمستخدم بقراءة role الخاص به فقط
      allow read: if request.auth != null && request.auth.uid == userId;
      // السماح للأدمن بإنشاء/تحديث الأدوار (لكل المستخدمين)
      allow write: if isAdmin();
    }

    match /users/{userId} {
        allow create: if request.auth != null && request.auth.uid == userId;
        allow update, delete: if request.auth != null && request.auth.uid == userId;
        allow read: if request.auth != null && request.auth.uid == userId;
    }

    // قواعد الاشتراكات
    match /subscriptions/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if isAdmin();
    }

    match /videos/{videoId} {
      // السماح بالقراءة للجميع، والكتابة (إضافة/حذف/تعديل) للأدمن فقط
      allow read: if true; 
      allow write: if isAdmin();

      match /private/source {
        allow read: if hasValidSubscription();
        allow write: if isAdmin(); // الأدمن يمكنه تعديل المصادر الخاصة
      }
    }

    match /tests/{testId} {
      // السماح بالقراءة للجميع، والكتابة للأدمن فقط
      allow read: if true; 
      allow write: if isAdmin();

      match /private/content {
        allow read: if hasValidSubscription();
        allow write: if isAdmin();
      }
    }

    match /categories/{categoryId} {
      // السماح بالقراءة للجميع، والكتابة للأدمن فقط
      allow read: if true;
      allow write: if isAdmin();
    }

    match /courseCategories/{categoryId} {
      // السماح بالقراءة للجميع، والكتابة للأدمن فقط
      allow read: if true;
      allow write: if isAdmin();
    }

    match /courses/{courseId} {
      // السماح بالقراءة للجميع، والكتابة للأدمن فقط
      allow read: if true;
      allow write: if isAdmin();

      match /private/source {
        allow read: if hasValidSubscription();
        allow write: if isAdmin(); // الأدمن يمكنه تعديل المصادر الخاصة
      }
    }

    // قواعد الرسائل (الشكاوي)
    match /messages/{messageId} {
      // المستخدم يمكنه قراءة رسائله فقط (بناءً على userId أو userEmail)
      allow read: if request.auth != null && 
                      (resource.data.userId == request.auth.uid || 
                       resource.data.userEmail == request.auth.token.email ||
                       isAdmin());
      // أي شخص يمكنه إنشاء رسالة (حتى غير المسجلين)
      allow create: if true;
      // الأدمن فقط يمكنه تحديث/حذف الرسائل
      allow update, delete: if isAdmin();
    }

    // منع الوصول لأي شيء آخر افتراضياً
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

